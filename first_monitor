                      Navigator.push( //이메일 로그인창으로 넘어감
                        context,
                        MaterialPageRoute(builder: (context) => ),
                      );
                    },
                  ),

                  RaisedButton(
                      child: Image.asset('.jpg', width: 120, height: 120),
                    onPressed: () { // 버튼을 누르면 안에 있는 함수를 실행
                      Navigator.push(//페이스북 로그인창으로 넘어감
                        context,
                        MaterialPageRoute(builder: (context) => ()),
                      );
                    },
                  ),



                  RaisedButton(
                    child: Image.asset('.jpg', width: 120, height: 120),
                    onPressed: () { // 버튼을 누르면 안에 있는 함수를 실행
                      Navigator.push(//트위터 로그인창으로 넘어감
                        context,
                        MaterialPageRoute(builder: (context) => ()),
                      );
                    },
                  ),

                  RaisedButton(
                    child: Image.asset('.jpg', width: 120, height: 120),
                    onPressed: () { // 버튼을 누르면 안에 있는 함수를 실행
                      Navigator.push(//구글 로그인창으로 넘어감
                        context,
                        MaterialPageRoute(builder: (context) => ()),
                      );
                    },
                  ),

                  RaisedButton(
                    child: Image.asset('.jpg', width: 120, height: 120),
                    onPressed: () { // 버튼을 누르면 안에 있는 함수를 실행
                      Navigator.push(//회원가입창으로 넘어감
                        context,
                        MaterialPageRoute(builder: (context) => ()),
                      );
                    },
                  ),
                   ],
                    ),
        );
